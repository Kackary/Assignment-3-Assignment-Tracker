<%- include("layout", { body: `
<div class="container">
    <h2>Add Assignment</h2>
    <form method="POST" action="/assignments/add">
        <input class="form-control mb-2" type="text" name="title" placeholder="Title" required>
        <input class="form-control mb-2" type="text" name="course" placeholder="Course" required>
        <input class="form-control mb-2" type="date" name="dueDate" required>
        <select class="form-control mb-2" name="status">
            <option>Not Started</option>
            <option>In Progress</option>
            <option>Done</option>
        </select>
        <button class="btn btn-primary">Add Assignment</button>
    </form>
</div>
`}) %>